<?xml version="1.0" encoding="utf-8"?>
<openerp>
		<data>
				<template id="RFQ_1_document" name="Modern Template">
						<!-- Multicompany -->
						<t t-if="o and 'company_id' in o">
								<t t-set="company" t-value="o.company_id"></t>
						</t>
						<t t-if="not o or not 'company_id' in o">
								<t t-set="company" t-value="res_company"></t>
						</t>
						<div t-attf-style="padding-bottom:0px; padding-left:0px; padding-right:0px; color:{{style.text_color}} !important;font-size:{{style.header_font}}px !important;font-family:{{style.font_family}} !important;" class="header col-12">
								<t t-if="style.header">
										<div class="col-7 float-left" style="padding-left:0px;">
												<span t-if="style.logo">
														<img  t-att-src="image_data_uri(style.logo)" alt="Logo"/>
												</span>
												<span t-if="not style.logo and company.logo">
														<img  t-att-src="image_data_uri(company.logo)" alt="Logo"/>
												</span>
												<span t-if="not style.logo and not company.logo">
														<img  t-att-src="image_data_uri(company.logo)" alt="Logo"/>
												</span>
												<div t-if="company.twitter or company.facebook or company.facebook" t-attf-style="background-color:{{style.theme_color}}; width:auto; 
														float:left; padding-left:15px; color:{{style.theme_txt_color}}; 
														padding-right:15px; padding-top:2px; padding-bottom:2px;">
														<span t-if="company.twitter" style="padding-left:0px;" class="fa fa-twitter-square "/>&#160;<span t-field="company.twitter"/>
														<span t-if="company.facebook" style="padding-left:13px;" class="fa fa-facebook-square "/>&#160;<span t-field="company.facebook"/>
														<span t-if="company.youtube" style="padding-left:13px;" class="fa fa-youtube-square "/>&#160;<span t-field="company.youtube" />
												</div>
										</div>
										<div class="col-5 mb8 float-right" style="padding-bottom:2px;padding-right:0px;">
												<div class="float-right" style="width:auto;padding-left:15px;">
														<t t-call="professional_templates.company_address"/>
												</div>
										</div>
								</t>
						</div> <!--end of Header-->
						<!-- START OF PAGE -->
						<div class="article page col-12" t-attf-style="margin-top:0px; padding-top:5px; padding-left:0px; padding-right:0px; color:{{style.text_color}} !important;font-size:{{style.body_font}}px !important;font-family:{{style.font_family}} !important;">
								<div class="col-12" t-attf-style="white-space:pre-line;color:#{style.wm_color};left:#{style.leftpadding}mm; top:#{style.toppadding}mm;font-size:#{style.fontsize}px; opacity:#{style.opacity};z-index:-99; -webkit-transform:rotate(-#{style.rotate}deg);position:fixed;"><t t-esc="style.wm_eval(o, time, user, res_company)"/></div>
								<div class="col-12 float-left" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
										<div class="col-6 float-left" style="padding-left:0px; padding-right:0px;">
												<div  t-attf-style="background-color:{{style.theme_color}}; width:auto; float:left; padding-top:2px; padding-bottom:2px; 
														color:{{style.theme_txt_color}};">
														<span t-attf-style="font-size:{{style.body_font+6}}px; padding-left:5px; padding-right:5px;"><i class="fa fa-building"/> Vendor Address</span>
												</div>
										</div>
										<div class="col-6 float-right" style="padding-left:0px; padding-right:0px;">
												<div  t-attf-style="background-color:{{style.theme_color}}; width:auto; float:right; padding-top:2px; padding-bottom:2px; 
														color:{{style.theme_txt_color}};">
														<span t-attf-style="font-size:{{style.body_font+6}}px; padding-left:5px; padding-right:5px;"><i class="fa fa-truck"/> Shipping Address</span>
												</div>
										</div>
								</div> <!--end of wrapper-->
								<div class="col-12 float-left" style="padding-left:0px; padding-right:0px;"><!--start of wrapper -->
										<div class="col-6 float-left mt8" t-attf-style="padding-left:8px; padding-right:0px;">
												<div t-if="o.partner_id" t-attf-style="font-size:{{style.body_font+6}}px;color:{{style.cust_color}}; margin-top:5px; margin-bottom:5px; margin-left:0px;">
														<t t-if="o.partner_id">
																<span t-field="o.partner_id.display_name"/>
														</t>

												</div>
												<address t-field="o.partner_id" style="margin-bottom:0px;" 
														t-options='{"widget": "contact", "fields": ["address", "phone",  "email", "website"]}'/>
												<span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
										</div>
										<div class="col-6 float-right text-right" style="padding-left:0px; padding-right:8px;">
												<div t-if="o.dest_address_id">
														<address t-field="o.dest_address_id"
																t-options='{"widget": "contact", "fields": ["address", "name", "phone",  "email", "website"]}'/>
												</div>
												<div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">
														<address t-field="o.picking_type_id.warehouse_id.partner_id"
																t-options='{"widget": "contact", "fields": ["address", "name", "phone",  "email", "website"]}'/>
												</div>
										</div>
								</div> <!--end of wrapper-->
								<div class="col-8 float-right" t-attf-style="background-color:{{style.theme_color}}; color:{{style.theme_txt_color}}; padding-bottom:10px;">
										<h3>
												<span>Request for Quotation #</span>
												<span t-field="o.name"/>
										</h3>
								</div>
								<!-- DATA-->
								<t t-call="professional_templates.rfq_lines"/>
								<!--/DATA-->
						</div><!--End of PAGE-->
						<!--FOOTER -->
						<div class="footer" t-attf-style="font-size:{{style.footer_font}}px !important;font-family:{{style.font_family}} !important;">
								<t t-call="professional_templates.company_footer"/>
						</div>
						<!--/FOOTER-->
				</template>
		</data>
</openerp>
